{
  "name": "crestron-splus",
  "displayName": "Crestron SIMPL+",
  "description": "Syntax highlighting, formatting, build tasks.",
  "version": "1.0.0",
  "publisher": "sentry07",
  "icon": "icons/crestron.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/sentry07/vscode-crestron-splus.git"
  },
  "license": "GPL-3.0",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Formatters"
  ],
  "main": "./dist/extension",
  "contributes": {
    "commands": [
      {
        "command": "crestron-splus.localHelp",
        "title": "SIMPL+: Open S+ Help Reference"
      },
      {
        "command": "crestron-splus.webHelp",
        "title": "SIMPL+: Open S+ Online Reference"
      },
      {
        "command": "crestron-splus.build",
        "title": "SIMPL+: Build SIMPL+ Project"
      },
      {
        "command": "crestron-splus.insertCategory",
        "title": "SIMPL+: Insert #Category..."
      },
      {
        "command": "crestron-splus.openApis",
        "title": "SIMPL+: Open all project related API files"
      },
      {
        "command": "crestron-splus.openLibraries",
        "title": "SIMPL+: Open all project related library files"
      }
    ],
    "configuration": [
      {
        "title": "SIMPL+",
        "properties": {
          "crestron-splus.simplDirectory": {
            "type": "string",
            "default": "C:\\Program Files (x86)\\Crestron\\Simpl",
            "description": "Location of the Crestron SIMPL Directory."
          }
        }
      },
      {
        "title": "Compilation",
        "properties": {
          "crestron-splus.enable2series": {
            "type": "boolean",
            "default": false,
            "description": "Enables Series 2 build target for new or unknown SIMPL+ files"
          },
          "crestron-splus.enable3series": {
            "type": "boolean",
            "default": true,
            "description": "Enables Series 3 build target for new or unknown SIMPL+ files"
          },
          "crestron-splus.enable4series": {
            "type": "boolean",
            "default": true,
            "description": "Enables Series 4 build target for new or unknown SIMPL+ files"
          }
        }
      },
      {
        "title": "Formatting",
        "properties": {
          "crestron-splus.keywordCase": {
            "type": "string",
            "enum": [
              "lowercase",
              "UPPERCASE",
              "PascalCase",
              "Unchanged"
            ],
            "markdownEnumDescriptions": [
              "Format Keywords to all lowercase/lower_case",
              "Format Keywords to all UPPERCASE/UPPER_CASE",
              "Format Keywords to all PascalCase/Pascal_Case",
              "Leave Keywords unchanged"
            ],
            "default": "Unchanged",
            "description": "Case used when performing autoformat of built-in keywords, statements, etc "
          },
          "crestron-splus.braceLine": {
            "type": "boolean",
            "default": false,
            "description": "If enable it will add a new line before every opening curly bracket.  If not, it will move it to the end of the previous line"
          }
        }
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "crestron-splus.build",
          "group": "navigation@1",
          "when": "resourceLangId == crestron-splus"
        },
        {
          "command": "crestron-splus.localHelp",
          "group": "navigation@2",
          "when": "resourceLangId == crestron-splus"
        },
        {
          "command": "crestron-splus.webHelp",
          "group": "navigation@3",
          "when": "resourceLangId == crestron-splus"
        },
        {
          "command": "crestron-splus.insertCategory",
          "group": "navigation@4",
          "when": "resourceLangId == crestron-splus"
        },
        {
          "command": "crestron-splus.openApis",
          "group": "navigation@5",
          "when": "resourceLangId == crestron-splus && crestron-splus:hasApis"
        },
        {
          "command": "crestron-splus.openLibraries",
          "group": "navigation@6",
          "when": "resourceLangId == crestron-splus && crestron-splus:hasLibraries"
        }
      ]
    },
    "keybindings": [
      {
        "command": "crestron-splus.localHelp",
        "key": "ctrl+shift+f1",
        "when": "resourceLangId == crestron-splus"
      },
      {
        "command": "crestron-splus.webHelp",
        "key": "ctrl+shift+f2",
        "when": "resourceLangId == crestron-splus"
      },
      {
        "command": "crestron-splus.build",
        "key": "F12",
        "when": "resourceLangId == crestron-splus"
      },
      {
        "command": "crestron-splus.rebuild",
        "key": "shift+F12",
        "when": "resourceLangId == crestron-splus"
      }
    ],
    "languages": [
      {
        "aliases": [
          "SIMPL+"
        ],
        "id": "crestron-splus",
        "extensions": [
          ".usp",
          ".usl",
          ".csp",
          ".csl"
        ],
        "icon": {
          "dark": "./icons/simpl+Icon.png",
          "light": "./icons/simpl+Icon.png"
        },
        "configuration": "./language-configuration.json"
      },
      {
        "aliases": [
          "SIMPL# API"
        ],
        "id": "simpl-sharp-api",
        "extensions": [
          ".api"
        ],
        "icon": {
          "dark": "./icons/simplSharpIcon.png",
          "light": "./icons/simplSharpIcon.png"
        },
        "configuration": "./language-configuration.json"
      }
    ],
    "icons": {
      "target-two": {
        "description": "Simpl Plus Target Series 2",
        "default": {
          "fontPath": "./icons/simpl-plus-targets.woff",
          "fontCharacter": "\\20"
        }
      },
      "target-three": {
        "description": "Simpl Plus Target Series 3",
        "default": {
          "fontPath": "./icons/simpl-plus-targets.woff",
          "fontCharacter": "\\21"
        }
      },
      "target-four": {
        "description": "Simpl Plus Target Series 4",
        "default": {
          "fontPath": "./icons/simpl-plus-targets.woff",
          "fontCharacter": "\\22"
        }
      }
    },
    "grammars": [
      {
        "language": "crestron-splus",
        "scopeName": "source.crestron-splus",
        "path": "./syntaxes/crestron-splus.tmLanguage.json"
      },
      {
        "language": "simpl-sharp-api",
        "scopeName": "source.simpl-sharp-api",
        "path": "./syntaxes/simpl-sharp-api.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "crestron-splus",
        "path": "./snippets/snippets.json"
      }
    ],
    "taskDefinitions": [
      {
        "type": "crestron-splus",
        "properties": {
          "buildTypes": {
            "type": "array",
            "description": "Target Build Type"
          },
          "files": {
            "type": "array",
            "description": "Files to build"
          },
          "directory": {
            "type": "string",
            "description": "Directory where the files to build are located"
          },
          "rebuild": {
            "type": "boolean",
            "description": "Rebuild the files even if no change have been made to the usp"
          }
        }
      }
    ],
    "problemMatchers": [
      {
        "name": "SIMPL+",
        "owner": "crestron-splus",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": {
          "regexp": "\\[([^\\]]*)\\]\\s*(?:Error)\\s*\\d*\\s*\\(Line (\\d*)\\)\\s*-\\s*(.*)$",
          "file": 1,
          "location": 2,
          "message": 3
        }
      }
    ],
    "configurationDefaults": {
      "[crestron-splus]": {
        "editor.wordBasedSuggestions": "currentDocument",
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.quickSuggestions": {
          "other": true,
          "comments": false,
          "strings": false
        },
        "editor.snippetSuggestions": "inline"
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run bundle",
    "compile": "tsc -p ./",
    "compileWatch": "tsc -p . -w --outDir out",
    "bundle": "webpack --mode production",
    "bundleWatch": "webpack --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "package": "vsce package",
    "test": "vscode-test",
    "test-with-coverage": "vscode-test --coverage",
    "yaml2json-watch": "yaml2json syntaxes --save --pretty --recursive --watch",
    "puml-to-svg": "java -jar \"C:\\ProgramData\\chocolatey\\lib\\plantuml\\tools\\plantuml.jar\"  \".\\UML\\csharp-syntax-mindmap\\*.puml\" \".\\UML\\crestron-splus-syntax-mindmap\\*.puml\" -svg"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.x",
    "@types/sinon": "^17.0.3",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.1.0",
    "eslint": "^9.9.1",
    "sinon": "^19.0.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.4",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "yamljs": "^0.3.0"
  },
  "__metadata": {
    "id": "sentry07.crestron-splus",
    "publisherId": "sentry07",
    "publisherDisplayName": "Eric Walters"
  },
  "dependencies": {
    "html-to-text": "^9.0.5",
    "vscode-textmate-languageservice": "^4.0.0"
  }
}
